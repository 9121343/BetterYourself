# MyBetterSelf Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=development

# Google AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_KEY=your_google_ai_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Configuration
JWT_SECRET=your_jwt_secret_here_for_future_auth
SESSION_SECRET=your_session_secret_here

# Database Configuration (Future Enhancement)
# DATABASE_URL=postgresql://username:password@localhost:5432/mybetterself
# REDIS_URL=redis://localhost:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Email Configuration (Future Enhancement)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Social Auth (Future Enhancement)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
